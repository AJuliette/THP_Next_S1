<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
                <tr>
                  <th>Nom</th>
                  <th>Catégories et descriptions</th>
									<th>Prix de départ</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
              <tbody>
                <% @items.each do |item| %>
                  <tr>
                    <td><%= item.name %></td>
                    <td>
                      <% item.categories.each do |category| %>
                        <%= category.name %> : <%= category.description %> </br>
                      <% end %>
                    </td>
                    <td><%= item.original_price %></td>
                    <td>
                      <%= form_for [:administration, item] do |f| %>
                        <div class="field col-lg-4 col-sm-12 mt-3 mb-4">
                          <%= f.number_field :discount_percentage, min: 0, max: 100, class:"form-control" %> 
                        </div>
                    </td>
                    <td><%= item.price %></td>
                    <td>
                      <div class="actions mt-4 mb-3">
                        <%= f.submit "Modifier", class:"btn btn-primary mb-2" %>
                      </div>
                     <% end %>
                    </td>
                  </tr>
                <% end %>
							</tbody>
						</table>
					</div>
				</div>